<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="#ACA388"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/TextViewSubjectTitle"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:text="Môn học"
            android:textColor="#000000"
            android:textSize="25sp"></TextView>

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Tín Chỉ : "
                android:textColor="#000000"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/TextViewCredits"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textColor="#000000"
                android:textSize="20sp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/subjecinformation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_subject_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:id="@+id/subjecupdate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_update_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>

    <ImageButton
        android:id="@+id/subjectdelete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_baseline_delete_24"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>
</LinearLayout>